<!-- DASHBOARD PAGE -->
<div class="card" id="dashboard">
    <h1>Welcome ðŸŽ‰</h1>
    <div class="welcome-box">
        <p>You are successfully logged in!</p>
        <p>This website can be shared online.</p>
    </div>
    <button onclick="logout()">Logout</button>
